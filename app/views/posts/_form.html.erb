
<%= form_for @post do |f| %>
 <% if @post.errors.any? %>
   <div id="errors">
	<h3><%= pluralize(@post.errors.count, "errors")%>Stopped This Post From Saving</h3>

		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<%end%>

	<p>
		<%= f.label :title%>
		<%=f.text_field :title%>
	</p>

	<p>
		<%= f.label :body%>
		<%=f.text_area :body%>
	</p>

	<p>
		<%= f.submit%>
	</p>

	<%end%>